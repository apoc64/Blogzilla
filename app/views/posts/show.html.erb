<h3><%= @post.title %></h3>
<p><%= @post.body %></p>
<hr>

<% if @post.comments.count > 0 %>
  <h5>Comments</h5>
  <% @post.comments.each do |comment| %>
    <p><%= comment.text %></p>
  <% end %>
<% end %>

<h5>Add Comment</h5>
<%= form_for @comment do |f| %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <%= f.hidden_field 'post_id', value: @post.id %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'All Posts', posts_path %> | <%= link_to 'New Post', new_post_path %></p>
